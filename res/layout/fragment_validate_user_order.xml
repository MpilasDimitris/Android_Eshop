<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".ValidateUserOrderFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e1e1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/valName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insert name"
        android:layout_margin="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/valPass"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/valPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insert password"
        android:layout_margin="20dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/valName"/>

    <Button
        android:id="@+id/completeOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Complete order"
        android:background="#81c639"
        app:layout_constraintTop_toBottomOf="@+id/valPass"/>

</androidx.constraintlayout.widget.ConstraintLayout>