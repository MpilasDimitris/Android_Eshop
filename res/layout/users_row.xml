<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lineraProductRow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#e1e1e1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/userIDTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="User ID      "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/userID_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="60dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/userID_row"
        android:layout_width="162dp"
        android:layout_height="22dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Name           "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/name_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userIDTV" />

    <TextView
        android:id="@+id/name_row"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userID_row" />

    <TextView
        android:id="@+id/lastnameTV"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginEnd="40dp"
        android:text="Last Name             "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/lastname_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTV" />


    <TextView
        android:id="@+id/lastname_row"
        app:layout_constraintHorizontal_bias="0.883"
        android:inputType="textPersonName"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/emailTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Email   "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/lastname_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastnameTV" />

    <TextView
        app:layout_constraintHorizontal_bias="0.883"
        android:id="@+id/email_row"
        android:textSize="14sp"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lastname_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>