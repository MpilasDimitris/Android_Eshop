<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/sale_rowID"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lineraSaleRow"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#e1e1e1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>
    <TextView
        android:id="@+id/idTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Sales id"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cart_id_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/cart_id_row"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_nameTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="User name      "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/user_name_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="60dp"
        app:layout_constraintTop_toBottomOf="@+id/idTV"/>

    <TextView
        android:id="@+id/user_name_row"
        android:layout_width="162dp"
        android:layout_height="22dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_id_row"/>

    <TextView
        android:id="@+id/product_nameTV"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Item name"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/cart_name_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_nameTV" />

    <TextView
        android:id="@+id/cart_name_row"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_row" />

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginEnd="40dp"
        android:text="Total price            "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Salesprice_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_nameTV" />


    <TextView
        android:id="@+id/Salesprice_row"
        app:layout_constraintHorizontal_bias="0.883"
        android:inputType="textPersonName"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cart_name_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/capacityTV"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginEnd="40dp"
        android:text="Capacity       "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Salescapacity_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceTV" />

    <TextView
        android:id="@+id/Salescapacity_row"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintTop_toBottomOf="@+id/Salesprice_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/dateTV"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginEnd="40dp"
        android:text="Date       "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/DateSales_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capacityTV" />

    <TextView
        android:id="@+id/DateSales_row"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintTop_toBottomOf="@+id/Salescapacity_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>